// Prisma schema for Time Tracker
// NOTE: This is a placeholder and not a finalized schema.

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// TODO: Flesh out models with full fields and relations

model Project {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model TimeEntry {
  id         String   @id @default(cuid())
  projectId  String
  startedAt  DateTime
  endedAt    DateTime?
  taskNameId String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model TaskName {
  id        String   @id @default(cuid())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

